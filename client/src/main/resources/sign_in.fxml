<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox fx:id="signInParent" alignment="center" style="-fx-background-color: #363636" xmlns="http://javafx.com/javafx/8.0.112-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloud.client.SignInController">
    <Label text="Enter your username" style="-fx-text-fill: white"/>
    <TextField fx:id="userName" maxWidth="200">
    <VBox.margin>
        <Insets top="5.0"/>
    </VBox.margin>
    </TextField>
    <Label text="Enter your password" style="-fx-text-fill: white">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Label>
    <PasswordField fx:id="password" maxWidth="200">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </PasswordField>
    <Button onAction="#signIn" prefWidth="200" text="Sign in">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>
</VBox>
